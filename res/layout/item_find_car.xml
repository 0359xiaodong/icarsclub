<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dp">
    
    <ImageView 
        android:id="@+id/carImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView 
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/carImg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:text="布加迪威龙"/>
    <TextView 
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/carName"
        android:text="500元/天"/>
    <TextView 
        android:id="@+id/carType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动"
        android:drawableLeft="@drawable/ic_auto_tiny"
        android:drawablePadding="2dp"
        android:layout_toRightOf="@id/carImg"
        android:layout_below="@id/carName"
        android:layout_marginTop="5dp"/>
    <TextView 
        android:id="@+id/dealType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当面交易"
        android:drawableLeft="@drawable/ic_key_tiny"
        android:drawablePadding="2dp"
        android:layout_toRightOf="@id/carType"
        android:layout_below="@id/carName"
        android:layout_alignTop="@id/carType"
        android:layout_marginLeft="5dp"/>
    <TextView 
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深圳市龙岗区坂田街道五和大道北元征工业园"
        android:layout_toRightOf="@id/carImg"
        android:singleLine="true"
       	android:layout_alignBottom="@id/carImg"
       	android:layout_marginRight="30dp"/>

</RelativeLayout>
